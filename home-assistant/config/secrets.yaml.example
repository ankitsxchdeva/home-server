# Home Assistant Secrets Template
# Copy this to secrets.yaml and fill in your actual values
# Learn more: https://www.home-assistant.io/docs/configuration/secrets/

# Example secrets - replace with your actual values
some_password: your_password_here
api_key: your_api_key_here
device_tracker_secret: your_device_tracker_secret_here

# Database credentials (if using external DB)
db_password: your_database_password_here

# Integration secrets
google_client_id: your_google_client_id_here
google_client_secret: your_google_client_secret_here

# MQTT credentials  
mqtt_username: your_mqtt_username_here
mqtt_password: your_mqtt_password_here

# Notification services
pushbullet_api_key: your_pushbullet_api_key_here
telegram_bot_token: your_telegram_bot_token_here
telegram_chat_id: your_telegram_chat_id_here
